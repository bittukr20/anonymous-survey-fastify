{
  "name": "anonymous-survey",
  "version": "1.0.0",
  "description": "anonymous-survey recording service",
  "main": "src/index.js",
  "author": "",
  "license": "UNLICENSED",
  "repository": {
    "type": "git"
  },
  "dependencies": {
    "env-schema": "^0.1.0",
    "fastify": "^3.18.1",
    "fastify-env": "^2.1.1",
    "fastify-swagger": "^4.8.2"
  },
  "engines": {
    "node": ">=10.*"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "fs-extra": "^8.1.0",
    "husky": "^3.1.0",
    "inquirer": "^7.0.3",
    "jest": "^26.0.1",
    "lint-staged": "^10.1.7",
    "nodemon": "^2.0.4",
    "pino-pretty": "^2.6.0",
    "prettier": "^2.0.5"
  },
  "eslintIgnore": [
    "node_modules/*",
    "coverage/*",
    ".nyc_output/*"
  ],
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "node"
  },
  "scripts": {
    "lint": "eslint . -c .eslintrc.json --ext js",
    "lint:fix": "npm run lint -- --fix",
    "start": "node --max-http-header-size 24000 src/index",
    "test:unit": "LOG_LEVEL=silent jest -c jest.config.unit.js"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty",
      "pre-push": "npm run test:unit"
    }
  }
}
